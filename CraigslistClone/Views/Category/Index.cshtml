@model CraigslistClone.Models.CategoryIndexModel

<h1>

    <table class="table table-hover" id="threadIndexTable">
        <tbody>
        @foreach (var category in Model.CategoryList)
        {
            <tr>
                <td>
                    <a asp-controller="Category" asp-action="Topic" asp-route-id="@category.Id"> @category.Name </a>
                </td>
                <td>
                    @category.Description
                </td>
            </tr>
        }
        </tbody>
    </table>
</h1>